{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": ["node", "jest"]
  },
  "include": [
    "actions",
    "bin",
    "commands",
    "configs",
    "examples",
    "lib",
    "types"
  ],
  "exclude": ["node_modules", "e2e"]
}
